{% block body %}

{% trans_default_domain 'FOSUserBundle' %}
<div class="fos_user_user_profile">
<div class="container margeTop5 cadreUser">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h1 class="text-center page-header text-uppercase">Editer mon profil</h1>
        </div>
    </div>
</div>

<div class="container cadreUser margeTop5 margeBot20 font22 text-center black">
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}                      

    <div class="row">

        <div class="col-lg-6">
            {{ form_label(form.username, null, {'label_attr': {'class': 'black'}}) }}
            {{ form_widget(form.username,{ 'attr': {'class': 'form-control font22'}}) }}
            {% do form.username.setRendered %}
            {% if not form.username.vars.valid %}
            
            {% for error in form.username.vars.errors %}
            
            <p class="text-danger"> {{ error.message }} </p>
            
            {% endfor %}
            
            {% endif %}
        </div>
        
        <div class="col-lg-6">
            {{ form_label(form.firstname, null, {'label_attr': {'class': 'black'}}) }}
