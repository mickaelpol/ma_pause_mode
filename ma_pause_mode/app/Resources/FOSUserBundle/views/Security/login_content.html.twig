{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
    <div class="col-xs-offset-4 col-xs-4">
        <div class="panel panel-default">
            <div class="panel-heading text-center">Connexion</div>
    <div class="panel-body">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" />
            <br>
        <div class="checkbox text-center">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>   
    </div>
    <div class="text-center">
        <input class="btn btn-regi" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
    <br>
        <div class="text-center">
            <a title="crÃ©er un compte" href="{{ path('fos_user_registration_register') }}" class="btn-nav">Pas encore de compte ?</a>
        </div>
    <br>
    </form>
</div>

