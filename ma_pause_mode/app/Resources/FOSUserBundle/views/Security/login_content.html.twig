{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="container">
        <div class="col-xs-offset-4 col-xs-4">
            <div class="alert alert-danger text-danger text-center"><strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong></div>
        </div>
    </div>
{% endif %}


<div class="container text-center margeTop2">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
    <div class="col-xs-12 col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading text-center">Connexion</div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <label for="username">{{ 'security.login.username'|trans }} ou Addresse Email</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    <br>
                </div>
                <div class="col-lg-12">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
                    
                <div class="col-lg-12 checkbox">
                    <label for="remember_me" class="checkbox-inline">{{ 'security.login.remember_me'|trans }}
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    </label>
                </div>
                    
                <div class="text-center col-lg-12 margeTop10">
                    <input class="btn btn-regi btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    <br>
                </div>

                <div class="col-xs-12 col-sm-6 col-lg-12 text-center">
                    <a title="créer un compte" href="{{ path('fos_user_registration_register') }}" class="linkDisabled margeTop10">Pas encore de compte ?</a>
                </div>
                <div class="col-xs-12 col-sm-6 col-lg-12 text-center">
                    <a title="Mot de passe oublié ?" href="{{ path('fos_user_resetting_request') }}" class="linkDisabled">Mot de passe oublié ?</a>
                </div>
            </div>
        </div>
    </div>
    </form>
</div>
{# Bouton de retour en arrière #}
<div class="container margeTop5">
    <div class="row margeBot5">
        <div class="col-md-4">
            <form>
                <button class="btn btn-md btn-default" type="button" onclick="history.go(-1)">
                    <i class="fa fa-arrow-circle-left"></i> Retour</button>
            </form>
        </div>
    </div>
</div>
{# Fin Bouton de retour en arrière #}