{% extends 'base.html.twig' %}

    {% block title %}
        Article {{ article.title|raw|striptags }}
    {% endblock %}


{% block body %}

<div class="container margeTop5">
    <div class="col-sm-12 col-xs-12"> 
        <div class="text-center">
            <img src="{{ asset('uploads/images/Article/' ~ article.image) }}" width="100%"  alt="Image d'article">
        </div>
    </div>
</div>

<div class="container margeTop5">
            {{article.title|raw}}

    <div class="row">
        <div class="col-xs-12">
            
                
            {% autoescape %}
                {{ article.content|raw}}
            {% endautoescape %}
        </div>
    </div>
    <div class="row margeTop10">
        <div class="col-md-12">
            {% if article.date %}
                <p>article créer le : {{ article.date|date('d-F-Y') }}</p>
            {% endif %}
            {% if article.dateUpdate %}
                <p>article éditer le : {{ article.dateUpdate|date('d-F-Y à H:i') }}</p>
            {% endif %}

            
            <p>
                Auteur de l'article :
                <a href="{{ path('show_profile', {'id': article.user.id }) }}">
                    {{ article.user.firstName }} {{ article.user.username }}
                </a>
            </p>
        </div>
    </div>
</div>

    {# Bouton de retour en arrière #}
    <div class="container margeTop5">
        <div class="row margeBot5">
            <div class="col-md-4">
                <form>
                    <button class="btn btn-md btn-default" type="button" onclick="history.go(-1)">
                        <i class="fa fa-arrow-circle-left"></i> Retour</button>
                </form>
            </div>
        </div>
    </div>
    {# Fin Bouton de retour en arrière #}
{% endblock %}
