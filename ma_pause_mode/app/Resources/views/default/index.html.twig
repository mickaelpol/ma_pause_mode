{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/img.css') }}">
    <link rel="stylesheet" href="{{ asset('marge/img.css') }}">
{% endblock %}

{% block body %}

    <div class="col-sm-offset-3 col-sm-6">
        <div class="col-sm-12">

            <img src="{{ asset('uploads/images/Article/' ~ articles|first.image) }}" class="img-responsive firstImg img-rounded" alt="">

            <div class="caption">
                {{ articles|first.title|raw }}
            </div>
        </div>

        {% for article in articles %}

            {% if loop.first == false %}
                <div class="col-sm-6">
                    <a href="{{ path('article_show', { 'id': article.id }) }}">
                        <img src="{{ asset('uploads/images/Article/' ~ article.image) }}" class="img-responsive secondImg img-rounded" alt="">
                    </a>
                    <div class="caption">
                        {{ article.title|raw }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                {% for section in sections %}
                    <div class='page-header'>
                        <h3>
                            {{ section.name}}
                        </h3>
                    </div>
                    <ul class="list-unstyled">
                        {% set j = 2 %}
                        {% if section.articles | length < 3 %}
                            {% set j = section.articles | length - 1 %}
                        {% endif %}
                        {% if j != -1 %}
                            {% for i in 0..j %}
                                <li>
                                    <ul class="list-inline vcenter">
                                        <li>
                                            <img src="{{ asset('uploads/images/Article/' ~ section.articles|reverse[i].image|raw) }}" class="img-responsive test img-rounded margeBot5" alt="photo article">
                                        </li>
                                        <li>
                                            {{ section.articles|reverse[i].title|raw }}
                                        </li>
                                    </ul>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                {% endfor %}
            </div>
            <div class="col-sm-3">
                <div class="page-header">
                    <h3>Hot Now</h3>
                </div>

                {# DEBUT DU CAROUSSEL #}
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="{{ asset('uploads/images/Article/' ~ articles|first.image) }}" alt="Los Angeles">
                        </div>

                        <div class="item">
                            <img src="{{ asset('uploads/images/Article/' ~ articles|first.image) }}" alt="Chicago">
                        </div>

                        <div class="item">
                            <img src="{{ asset('uploads/images/Article/' ~ articles|last.image) }}" alt="New York">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                {# FIN DU CAROUSSEL #}
                <div class="page-header">
                    <h3>Les derniers tweets</h3>
                </div>
                <a data-tweet-limit="3" class="twitter-timeline" href="https://twitter.com/mapausemode?ref_src=twsrc%5Etfw">Tweets by mapausemode</a>
                <script async="async" src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
        </div>
    </div>
{% endblock %}