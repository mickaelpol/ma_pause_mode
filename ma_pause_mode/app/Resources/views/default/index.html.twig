{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/img.css') }}">
{% endblock %}

{% block body %}

    <div class="col-sm-offset-3 col-sm-6">
        <div class="col-sm-12">
            <img src="{{ asset('uploads/images/Article/' ~ articles|first.image) }}"
            class="img-responsive firstImg img-rounded" alt="">
            <div class="caption">
                    {{ articles|first.title|raw }}
            </div>
        </div>

        {% for article in articles %}

            {% if loop.first == false %}
                <div class="col-sm-6">
                    
                    <img src="{{ asset('uploads/images/Article/' ~ article.image) }}"
                    class="img-responsive secondImg img-rounded" alt="">
                    <div class="caption">
                        {{ article.title|raw }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}