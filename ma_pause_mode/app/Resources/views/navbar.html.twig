<!-- Début NavBar md et lg -->

{# /////////////////////////////////////////////////// #}

        <nav class="navbar navbar-center navbarMod margeTop5 font20 bord  hidden-sm hidden-xs">
            <div class="container-fluid text-uppercase">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navLg">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="col-lg-12 text-center hidden-md bord">
                    <div class="collapse navbar-collapse" id="navLg">
                        <ul class="nav navbar-nav">
                            <li class="active">
                                <a href="{{ path('homepage') }}" class="btn-nav">Accueil</a>
                            </li>

                            {% for section in sectionsId %}

                            {# parcour des id de la barre de navigation pour afficher que  #}
                            {% if section.id < 3 %}
                            <li>
                                <a href=" {{ path('article_section', { 'id': section.id }) }} " class="btn-nav">{{ section.name }}</a>
                            </li>
                                
                            {% endif %}

                            {# Bouton créateur dropdown #}
                            {% if section.id == 3 %}
                            <li class="dropdown">
                                <a href="{{ path('article_section', {'id': section.id}) }}" class="dropdown-toggle btn-nav" data-toggle="dropdown">{{ section.name }}
                                    <b class="caret"></b>
                                </a>
                            {% endif %}
                                {#  contenu du dropdown #}
                            {% if section.id == 4 %}
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ path('article_section', {'id': section.id}) }}">{{ section.name }}</a>
                                    </li>
                                </ul>
                            </li>
                            {# Fin du dropdown créateurs #}
                            {% endif %}

                            {# bouton voyages de la navbar #}
                            {% if section.id == 5 %}
                            <li>
                                <a href=" {{ path('article_section', { 'id': section.id }) }} " class="btn-nav">{{ section.name }}</a>
                            </li>

                            {% endif %}
                            
                            {% endfor %}

                            
                            <li>
                                <a href="#" class="btn-nav">A Propos</a>
                            </li>
                            <li>
                                <a href="{{ path('app_contact_contact') }}" class="btn-nav">Contact</a>
                            </li>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    
                            <li class="dropdown">
                                <a class="dropdown-toggle btn-nav" data-toggle="dropdown" href="#">{{ app.user.username }}
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="btn-nav" href=" {{ path('fos_user_profile_show') }} ">Mon Profil</a>
                                    </li>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <li>
                                        <a class="btn-nav" href=" {{ path('easyadmin') }} ">Administrer le site</a>
                                    </li>
                                    {% endif %}
                                    <li>
                                        <a href="{{ path('fos_user_security_logout') }}" class="btn-nav">
                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            {% else %}
                            <li>
                                <a href="{{ path('fos_user_security_login') }}" class="btn-nav">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </nav>



