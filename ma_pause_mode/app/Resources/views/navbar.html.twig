{% block navbar %} {# logo du site #}




<div class="container hidden-xs">
    <div class="row center-block">
        <img class="img-responsive center-block" src="{{ asset('img/ma-p-m.PNG') }}" width="246" height="253" alt="logo">
    </div>
</div>
